{
  "name": "chat-bot",
  "version": "0.0.1",
  "description": "PolloPollo chat-bot used to integrate https://pollopollo.org with the Obyte technology",
  "main": "lib/index.js",
  "scripts": {
    "start": "node --max-old-space-size=4096 lib/index.js",
    "documentation": "rm -rf documentation && typedoc --out ./documentation --tsconfig tsconfig.json --hideGenerator --name PolloPolloChatBot",
    "lint": "tslint --project ./tsconfig.json --config ./tslint.json --format stylish",
    "compile": "rm -rf lib && tsc && yarn lint && copyfiles conf.js ./lib"
  },
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.4",
    "headless-obyte": "git+https://github.com/byteball/headless-obyte.git",
    "node-fetch": "^2.3.0",
    "ocore": "git+https://github.com/byteball/ocore.git"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/node": "^11.13.7",
    "@types/node-fetch": "^2.3.2",
    "chalk": "^2.4.2",
    "copyfiles": "^2.1.0",
    "husky": "^1.3.1",
    "tslint": "^5.16.0",
    "tslint-microsoft-contrib": "^6.1.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.5",
    "yarn": "^1.15.2"
  }
}
